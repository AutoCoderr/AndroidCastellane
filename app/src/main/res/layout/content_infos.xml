<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Infos"
    android:background="@color/Blue"
    tools:showIn="@layout/app_bar_infos">

    <Button
        android:id="@+id/btArriere"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:background="@drawable/arrow_arriere"
        android:text="                                   Retour"
        app:layout_constraintBottom_toTopOf="@+id/infosLayout"
        app:layout_constraintEnd_toStartOf="@+id/infosLayout"
        app:layout_constraintHorizontal_bias="0.702"
        app:layout_constraintStart_toEndOf="@+id/infosLayout"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/infosLayout"
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btArriere"></LinearLayout>
</android.support.constraint.ConstraintLayout>