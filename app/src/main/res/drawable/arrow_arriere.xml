<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Colored rectangle-->
    <item android:right="00dp">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="40dp"  />
            <solid android:color="#5EB888" />
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <!-- This rectangle for the top arrow edge -->
    <!-- Its color should be the same as the layout's background -->
    <item android:top="-40dp" android:bottom="65dp" android:left="-30dp">
        <rotate android:fromDegrees="135">
            <shape android:shape="rectangle">
                <solid android:color="@color/Blue" />
            </shape>
        </rotate>
    </item>
    <!-- This rectangle for the lower arrow edge -->
    <!-- Its color should be the same as the layout's background -->
    <item android:top="65dp" android:bottom="-40dp" android:left="-30dp">
        <rotate android:fromDegrees="-135">
            <shape android:shape="rectangle">
                <solid android:color="@color/Blue" />
            </shape>
        </rotate>
    </item>
</layer-list>